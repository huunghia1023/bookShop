@using bookShopSolution.ViewModels.System.Users
@model LoginRequest
@{
    ViewData["Title"] = "Login";
    var culture = CultureInfo.CurrentCulture.Name;
}
<div class="card">
<div class="text-center">
    <img src="/images/logo.jpg" class="rounded-circle border p-1" style="width: 100px;margin-bottom: 20px;margin-top: 20px;">
</div>
<header class="card-header" style="text-align: center;background-color: transparent;border: none;">
        <h4 class="card-title mt-2" localize-content>Login</h4>
    </header>

<form method="post" id="singninFrom" action="/@culture/Account/Login">
    <div class="form-group">
        <label class="font-weight-bold">Username <span class="text-danger">*</span></label>
        <input type="text" name="username" asp-for="UserName" class="form-control" placeholder="Enter username">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="font-weight-bold">Password <span class="text-danger">*</span></label>
        <input type="password" name="password" id="password" class="form-control" placeholder="***********">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col">
                <label><input type="checkbox" name="condition" id="condition"> <localize>Remember me</localize></label>
            </div>
            <div class="col text-right"> <a href="javascript:;" data-toggle="modal" data-target="#forgotPass"><localize>Forgot Password</localize>?</a> </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" name="submit" class="btn btn-block btn-primary" localize-content>Login</button>
    </div>
</form>
<div class="border-top card-body text-center"><localize>Don't have account</localize>? <a href="/@culture/Account/Register"><localize>Register</localize></a></div>
</div> <!-- card.// -->